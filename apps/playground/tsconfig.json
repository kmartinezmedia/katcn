{
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/**/*.ts"],
  "types": ["bun-types", "hono"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "katcn",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "references": [
    {
      "path": "../../packages/components"
    },
    {
      "path": "../../packages/docgen"
    },
    {
      "path": "../../packages/tsconfig"
    }
  ]
}
