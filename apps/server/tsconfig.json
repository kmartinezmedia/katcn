{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "types": [
    "bun-types"
  ],
  "compilerOptions": {
    "composite": false,
    "incremental": true,
    "declaration": false,
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "customConditions": [
      "development"
    ]
  }
}
