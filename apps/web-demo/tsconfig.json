{
  "extends": "tsconfig/next-app.json",
  "compilerOptions": {
    "target": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".katcn/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ],
  "references": [
    {
      "path": "../../packages/katcn"
    },
    {
      "path": "../../packages/fixtures"
    },
    {
      "path": "../../packages/tsconfig"
    }
  ]
}
