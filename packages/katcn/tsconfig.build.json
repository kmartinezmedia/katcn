{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["marcos/**/*.ts", "helpers/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "jsx": "react-jsx",
    "jsxImportSource": "katcn",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "module": "ESNext",
    "target": "ESNext",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  }
}
